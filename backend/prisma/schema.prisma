generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  password     String
  email        String   @unique
  musics       Music[]
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Music {
  id              String            @id @default(uuid())
  name            String
  artist          String
  genre           String
  image           String
  status          MusicStatus
  user            User              @relation(fields: [userId], references: [id])
  userId          String
  instruments     Instrument[]      @relation("MusicInstruments")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  MusicInstrument MusicInstrument[]
}

model Instrument {
  id              String            @id @default(uuid())
  name            String
  icon            String
  musics          Music[]           @relation("MusicInstruments")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  MusicInstrument MusicInstrument[]
}

model MusicInstrument {
  musicId      String
  instrumentId String

  music      Music      @relation(fields: [musicId], references: [id])
  instrument Instrument @relation(fields: [instrumentId], references: [id])

  @@id([musicId, instrumentId])
}

enum MusicStatus {
  LEARNING
  REPERTOIRE
  WANT_TO_LEARN
}
